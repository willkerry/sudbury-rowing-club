  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],

  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "public/**"],
      "outputMode": "new-only"
