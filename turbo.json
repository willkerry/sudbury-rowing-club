{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env.local"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "public/**"],
      "env": [
        "ALGOLIA_API_KEY",
        "APP_URL",
        "BUG_RECIPIENT_EMAIL",
        "NEXT_PUBLIC_*",
        "REDIRECT_SECRET",
        "RESEND_API_KEY",
        "SANITY_STUDIO_*",
        "SANITY_AUTH_TOKEN"
      ]
    },
    "deploy": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env.local"],
      "outputLogs": "new-only",
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "public/**"],
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test:watch": {
      "outputs": []
    },
    "type-check": {
      "inputs": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"]
    }
  }
}
