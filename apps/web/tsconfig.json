{
  "exclude": ["node_modules"],
  "extends": "@sudburyrc/tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "strictNullChecks": true,
    "paths": {
      "@/app/*": ["app/*"],
      "@/assets/*": ["public/assets/*"],
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"],
      "@/env": ["./env.ts"],
      "@/hooks/*": ["hooks/*"],
      "@/lib/*": ["lib/*"],
      "@/pages/*": ["pages/*"],
      "@/test-utils/*": ["test-utils/*"],
      "@/types/*": ["types/*"],
      "content-collections": ["./.content-collections/generated"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "tailwind.config.js",
    ".next/types/**/*.ts"
  ]
}
